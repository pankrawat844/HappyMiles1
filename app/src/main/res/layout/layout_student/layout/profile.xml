<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tour">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar"></include>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/user"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:layout_toLeftOf="@+id/view"
            android:layout_marginTop="80dp" />
        <View
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:id="@+id/view"
            android:layout_alignTop="@+id/logo"
            android:layout_alignBottom="@+id/logo"
            android:layout_marginLeft="3dp"
            android:layout_centerHorizontal="true"
            ></View>
        <ImageView
            android:id="@+id/passort_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/passport"
            android:layout_toRightOf="@+id/view"
            android:layout_marginTop="80dp" />


        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/logo"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"
            >
            <custom_font.MyEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint="Passport First Name"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"

                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/name_last_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/name_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"
            >
            <custom_font.MyEditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint="Passport Last Name"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/name_middle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/name_last_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"
            >
            <custom_font.MyEditText
                android:id="@+id/middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint="Passport Middle Name"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/passport_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/name_middle_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"
            >
            <custom_font.MyEditText
                android:id="@+id/passport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint="Passport No"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/email_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/passport_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Email"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emergency_email_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/email_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/emergency_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint="Emergency Email"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/phno_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/emergency_email_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Mobile Number"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"

                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emergency_phno_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/phno_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/emergency_phno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Emergency Contact Number"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"

                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dob_layout"
            android:layout_below="@+id/emergency_phno_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9">
            <custom_font.MyEditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Of Birth"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/edit_text"
                android:background="@drawable/custom_edittext_profile"
                android:paddingLeft="15dp"
                android:layout_gravity="center"
                android:inputType="text"
                android:enabled="true"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sex"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_below="@+id/dob_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp">
            <custom_font.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/edit_text"
                android:id="@+id/gender"
                android:text="Gender"/>
            <RadioGroup

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_below="@+id/gender"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"

                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"/>
            </RadioGroup>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/naionality_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/sex"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/naionality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Nationality"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/gardian_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/naionality_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/gardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Gardian/Nominee Name"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gardian_no_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/gardian_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/gardian_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Gardian/Nominee Number"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/allergies_layout"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/gardian_no_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/allergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Allergies"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/meal_layout"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/allergies_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Meal Prefrences"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/medication_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/meal_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/medication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Medication requirements"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/blood_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/medication_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/blood_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Blood Group"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/batch_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/blood_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/batch_per_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Batch/Year"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/roll_no_layout"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/batch_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/roll_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" College Roll Number"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/standard_layout"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/roll_no_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Standard"
                android:layout_gravity="center"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/note_layout"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:layout_below="@+id/standard_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"

            android:layout_marginLeft="25dp"
            android:layout_centerHorizontal="true"

            >
            <custom_font.MyEditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#ffffff"
                android:hint=" Specail Note(Max 500 word)"
                android:layout_gravity="center"
                android:inputType="textFilter"
                android:paddingLeft="15dp"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_edittext_profile"
                android:textSize="@dimen/edit_text"
                android:letterSpacing="0.1"/>
        </RelativeLayout>
        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/nex"
            android:background="@drawable/btn_shape"
            android:textSize="@dimen/edit_text"
            android:text="Submit"
            android:maxLength="500"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/note_layout"

            />
    </RelativeLayout>

</ScrollView>