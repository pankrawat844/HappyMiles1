<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="#cde7e7"

    android:layout_height="250dp">


    <custom_font.MyTextView
        android:id="@+id/personal_info_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textStyle="bold"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/personal_info_txt"
        android:layout_alignRight="@+id/personal_info_txt"
        android:layout_below="@+id/personal_info_txt"
        android:background="#ffffff"></View>

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

</RelativeLayout>