<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tour"
    tools:context="com.paz.happymiles.Tour_Cordinator">

    <include layout="@layout/toolbar"></include>

    <TextView
        android:id="@+id/tour_co"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/tour_bg"
        android:textColor="#106eb6"
        android:padding="10dp"
        android:layout_below="@+id/toolbar"
        android:textSize="22dp"
        android:text="TOUR CO-ORDINATORS" />


    <TextView
        android:id="@+id/tour_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tour_co"
        android:padding="15dp"
        android:textSize="@dimen/edit_text"
        android:gravity="center"
        android:background="#106eb6"
        android:textColor="#ffffff"
        android:text="TOUR MANAGER" />

    <TextView
        android:id="@+id/tour_manager_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#106eb6"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/tour_manager_name"
        android:textSize="@dimen/edit_text"
        android:textStyle="bold"

        android:textAllCaps="true"
        android:text="Name:" />

    <TextView
        android:id="@+id/tour_manager_name"
        android:layout_below="@+id/tour_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tour_manager_name_txt"
        android:textColor="#106eb6"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/edit_text"

        android:text="Pallavi Gupta" />

    <TextView
        android:id="@+id/tour_manager_ph_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#106eb6"
        android:layout_alignBottom="@+id/tour_manager_ph"
        android:textSize="@dimen/edit_text"
        android:layout_marginLeft="15dp"
        android:textAllCaps="true"
        android:text="Phone no:" />

    <TextView
        android:id="@+id/tour_manager_ph"
        android:layout_below="@+id/tour_manager_name_txt"
        android:layout_toRightOf="@+id/tour_manager_ph_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#106eb6"
        android:textAllCaps="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/edit_text"
        android:text="+918447992236" />

    <TextView
        android:id="@+id/tour_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tour_manager_ph"
        android:padding="15dp"
        android:textSize="@dimen/edit_text"
        android:gravity="center"
        android:background="#106eb6"
        android:textColor="#ffffff"
        android:text="OPERATIONS CO-ORDINATOR MANAGER" />


    <TextView
        android:id="@+id/tour_operation_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#106eb6"
        android:layout_alignBottom="@+id/tour_operation_name"
        android:textSize="@dimen/edit_text"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Name:"
        android:layout_marginLeft="15dp"

        />

    <TextView
        android:id="@+id/tour_operation_name"
        android:layout_below="@+id/tour_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#106eb6"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tour_operation_name_txt"

        android:textSize="@dimen/edit_text"
        android:text="Pallavi Gupta" />

    <TextView
        android:id="@+id/tour_operation_ph_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#106eb6"
        android:layout_alignBottom="@+id/tour_operation_ph"
        android:textSize="@dimen/edit_text"
        android:textAllCaps="true"
        android:layout_marginLeft="15dp"
        android:text="Phone no:" />

    <TextView
        android:id="@+id/tour_operation_ph"
        android:layout_below="@+id/tour_operation_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#106eb6"
        android:textAllCaps="true"
        android:layout_toRightOf="@+id/tour_operation_ph_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/edit_text"
        android:text="+918447992236" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#106eb6"
        android:layout_marginTop="10dp"

        android:layout_below="@+id/tour_operation_ph">

        <TextView
            android:id="@+id/teacher1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/edit_text"
            android:text="Teacher 1" />

        <TextView
            android:id="@+id/teacher1_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@+id/teacher1"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="name:"

            />

        <TextView
            android:id="@+id/teacher1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_toLeftOf="@+id/view"
            android:layout_toRightOf="@+id/teacher1_name_txt"
            android:layout_below="@+id/teacher1"
            android:textAllCaps="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="pankaj Rawat" />

        <TextView
            android:id="@+id/teacher1_ph_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@+id/teacher1_name"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="phone no:" />

        <TextView
            android:id="@+id/teacher1_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/teacher1_ph_txt"
            android:layout_toLeftOf="@+id/view"
            android:layout_below="@+id/teacher1_name"
            android:textAllCaps="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="8444444414"

            />

        <TextView
            android:id="@+id/teacher2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/edit_text"
            android:text="Teacher 2" />

        <View
            android:id="@+id/view"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#CDC7C1" />

        <TextView
            android:id="@+id/teacher2_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/view"

            android:layout_below="@+id/teacher1"
            android:textAllCaps="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="name:" />

        <TextView
            android:id="@+id/teacher2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@+id/teacher1"
            android:textAllCaps="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="pankaj Rawat"
            android:layout_above="@+id/teacher1_ph_txt"
            android:layout_toEndOf="@+id/teacher2_name_txt" />

        <TextView
            android:id="@+id/teacher2_ph_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/view"
            android:layout_below="@+id/teacher2_name"
            android:textAllCaps="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="phone no:" />

        <TextView
            android:id="@+id/teacher2_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/teacher2_ph_txt"
            android:layout_below="@+id/teacher2_name"
            android:textAllCaps="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="8444444414" />


    </RelativeLayout>
</RelativeLayout>
